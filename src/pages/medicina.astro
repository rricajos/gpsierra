---
import Layout from "../layouts/Layout.astro";
import PostCard from "../components/PostCard.astro";

import { getPosts } from "../utils/getPosts.js";
import { getPostData } from "../utils/getPostMetaData.js";

// Definimos los tipos para nuestras publicaciones y los datos del post
type Post = {
  filename: string;
  content: string;
};

type PostData = {
  head: {
    title: string;
    description: string;
    date: string;
    tags: string;
  };
  body: { content: string };
};

const posts: Post[] = getPosts();

