---
import Layout from './Layout.astro'
const {frontmatter} = Astro.props;
---

<Layout title='' >
  <article class=" max-w-screen-md m-auto pt-20 pl-6 pr-6">
    <h1 class="text-4xl font-bold tracking-tight text-gray-900 sm:text-6xl">{frontmatter.title}</h1>
    
    <p class=" pt-4 pb-6 pl-2 pr-2 ">{frontmatter.description}</p>
    <slot /> 
  </article>


</Layout>