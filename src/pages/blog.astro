---
import Layout from "../layouts/Layout.astro";

const posts = await Astro.glob("./blog/*.md");
---

<Layout title="Blog de Giuseppe Sierra">
  <div class="bg-white py-24 sm:py-32">
    <div class="mx-auto max-w-6xl px-6 lg:px-8">
      <div class="mx-auto border-b-2 border-gray-100">
        <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-5xl">
          Blog de Giuseppe Sierra
        </h2>
        <p class="mt-4 pb-4 ml-4 mr-4 text-lg leading-8 text-gray-600">
          Bienvenidos a mi laboratorio de ideas y realidades ðŸ‘½
        </p>
      </div>
      <div class="thxmidu lg:mx-0 mt-4 mb-4">
        {
          posts.map((post) => (
            <a href={post.url}>
              <time class=" text-1xl text-gray-500" datetime="">
                {post.frontmatter.date}
              </time>
              <h3 class="text-1xl font-bold tracking-tight text-gray-900 sm:text-3xl">
                {post.frontmatter.title}
              </h3>
              {/* <div>{post.frontmatter.tags}</div> */}
              <p class="pt-4 pb-4">{post.frontmatter.description}</p>
            </a>
          ))
        }
      </div>
    </div>
  </div>
</Layout>

<style>
  .thxmidu {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 48px;
  }
</style>
