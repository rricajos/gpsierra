---
interface Props {
  title: string;
  description: string;
  icon: string;
}

const {title, description, icon} = Astro.props;

---

<div class="p-2 m-2 bg-red-100">
  <i class={icon + "  text-7xl"}></i>
  <h3 class=" text-xl">{title}</h3>
  <p>{description}</p>
</div>


<style>
  i {
    width: 100%;
    text-align: center;
  }
</style>